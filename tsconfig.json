{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "dom.iterable"],
        "types": ["vite/client"],
        "composite": true
    },
    "references": [
        { "path": "./pro-pages" }
    ],
    "include": ["./pro-pages/src/plugins/**.d.ts"],
    "exclude": ["node_modules", "./pro-pages/"]
}
